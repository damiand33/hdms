<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><strong>PIW Details</strong></h1>
  <br>
  <h3><strong>PIW ID: </strong><%= @worksheet.piw_id %> </h3>
  
  <h3><strong>Submitted by: </strong><%= @worksheet.submitted_by %></h3>
  
  <h3><strong>Description: </strong><%= @worksheet.description %></h3>
  
  <h3><strong>Created: </strong><%= @worksheet.created_at %></h3>
 
  <h3><strong>Modified: </strong><%= @worksheet.updated_at %></h3>  

  <div class="pull-right">
  <%= link_to 'Edit', edit_worksheet_path(@worksheet), class: 'btn btn-primary' %>
  </div>

    <div class="clear"></div>

<hr>
  <h2>Comments:</h2>
    <table class="summary-table">
        <tr>
          <th>Comment</th>
          <th>Priority</th>
          <th>Entered By</th>          
        </tr>
        <% @worksheet.comments.each do |comment| %>
          <tr>
            <td><%= comment.message %></td>
            <td><%= comment.priority %></td>  
            <td><%= comment.user.email if comment.user %></td> <!--check to see if email is blank before writting to table -->        
          </tr> 
        <% end %>
      </table>

<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add a comment
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <%= simple_form_for @comment, url: worksheet_comments_path(@worksheet) do |f| %>
        <div class="modal-body">      
          <%= f.input :message, label: 'Comment' %>
          <%= f.input :priority, as: :select, collection: Comment::PRIORITY %>          
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add Comment", class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
  </div>
</div>


</div>

