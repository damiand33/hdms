<div class="booyah-box col-md-6 col-md-offset-3">

  <h2>Sign in</h2>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-6"><%= f.input :login, required: false, autofocus: true %><br></div>
      </div>
      <div class="row">
        <div class="col-md-4"><%= f.input :password, required: false %><br></div>
      </div>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>
    </div>
  <% end %>
<br>
  <%= render "devise/shared/links" %>

</div>